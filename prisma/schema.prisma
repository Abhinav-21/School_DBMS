// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL") // Use pooled connection
  directUrl = env("DATABASE_URL_UNPOOLED") // Use direct connection
}

// This is your 'schools' table definition
model School {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  city      String
  state     String
  contact   BigInt   
  image     String   // This will store the URL from Vercel Blob
  email_id  String

  createdAt DateTime @default(now())
}