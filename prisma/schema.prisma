// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // Ensure the query engine for Vercel's Linux runtime is generated and copied
  // into the deployed bundle. Add the binary targets you need for deployment.
  // 'native' will include the binary for the build machine; rhel-openssl-3.0.x
  // is required by Vercel's Linux builders.
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

// This is your 'schools' table definition
model School {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  city      String
  state     String
  contact   BigInt   
  image     String   // This will store the URL from Vercel Blob
  email_id  String

  createdAt DateTime @default(now())
}